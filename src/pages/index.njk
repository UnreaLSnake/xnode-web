{% set projectName = 'X-Node Web' %}

<!DOCTYPE html>
<html lang='en'>
   <head>

      <meta charset='UTF-8'>
      <meta name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no'>

      <title>{{ projectName }}</title>
      <meta name='robots' content='noindex, nofollow'>

      <style>
         @import url(https://fonts.googleapis.com/css?family=Open+Sans:400,600&subset=cyrillic);body{margin:0;font-weight:400;letter-spacing:0;background-color:#fff;background-image:none}.project{max-width:660px;margin:0 auto;line-height:24px}.project *,body{font-family:'Open Sans',sans-serif}.project h1{margin:0;padding:34px 16px 25px;font-size:30px;font-weight:600;text-align:center}.header{margin:0 16px 12px;font-size:17px;font-weight:600}.header span{color:#7119e7}.project q{font-style:normal}.project q,.project q:lang(en){quotes:'\201C''\201D''\2018''\2019'}.project q:lang(ru){quotes:'\00AB''\00BB''\201E''\201C'}.project q::after,.project q::before{font-weight:600;color:#7119e7}.project a{padding:0 10px;line-height:36px;color:#7119e7;white-space:nowrap;text-decoration:underline}.project a:active,.project a:hover{color:#7119e7;text-decoration:none}.project .list{width:100%;margin:0;font-size:17px;padding:8px 0 24px}.project .list li{display:flex;flex-direction:column;padding:5px 0 7px}.project .list li:nth-of-type(2n+1){background-color:#f5f5f6}.project .list p{margin:0}.project .name{padding:8px 16px}.project .name small{margin-right:12px;font-size:1em;color:#7119e7}.project .action{display:flex;margin-top:-8px;padding:0 6px}.project .action span{padding:0 10px;line-height:36px;white-space:nowrap}@media (min-width:531px){.project{padding:0 40px}.project h1{padding-right:20px;padding-left:20px}.header{margin-right:0;margin-left:0}.project .list li{padding-right:4px;padding-left:4px}}@media (min-width:741px){.project{padding:12px 40px}.project a{padding:0 16px;line-height:40px}.project .list li{flex-direction:row;justify-content:space-between;padding-bottom:6px}.project .action{margin-top:0}.project .action span{padding:0 16px;line-height:40px}}
      </style>

      <link rel='icon' sizes='32x32' href='https://xnode.site/assets/a-icons/favicon-32.png'>
      <link rel='icon' sizes='96x96' href='https://xnode.site/assets/a-icons/favicon-96.png'>
      <link rel='icon' sizes='16x16' href='https://xnode.site/assets/a-icons/favicon-16.png'>

   </head>
   <body>
      <main class='project'>


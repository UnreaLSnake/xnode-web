      {% endblock %}

      {# {% include 'elements/carcass/main-navbar/main-navbar.njk' %} #}

   </header>
   <main class='app-content{% if pageClass=="errors" %} mod-spec{% endif %}'>

      {% block AppContent %}
      {% endblock %}

   </main>
   <footer class='app-footer'>

      {% block AppFooter %}
      {% endblock %}

      <div class='section'>
         {# {% include 'elements/carcass/main-footer/main-footer.njk' %} #}
      </div>

   </footer>
   <div class='app-overlay' data-js='app-overlay'>

      {% block AppOverlay %}
      {% endblock %}

   </div>
</body>


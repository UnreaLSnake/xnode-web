{% include 'layouts/__chunks/__mainHead.njk' %}

<body class='app-body anim-{{ loadAnim }} theme-{{ themeType }}' id='xnode-web'>
   <header class='app-header{% if pageClass=="homepage" %} mod-hero{% endif %}' data-js='app-header'>

